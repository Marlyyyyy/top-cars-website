{% extends 'MartonTopCarsBundle:Default:index.html.twig' %}

{% block active_tab_highscores %} active{% endblock %}

{% block dash_line %}
    <div class="dash_line"></div>
{% endblock %}

{% block content %}

    <div class="content shadow">
        <div class="container leaderboard-container" id="card_game">

            <div class="tool-bar">
                <a href="{{ path('marton_topcars_leaderboard', {'sort':'level'}) }}"><button class="button-blue {{ sort == 'level' ? ' active' : '' }}">Level</button></a>
                <a href="{{ path('marton_topcars_leaderboard', {'sort':'score'}) }}"><button class="button-blue {{ sort == 'score' ? ' active' : '' }}">Score</button></a>
                <a href="{{ path('marton_topcars_leaderboard', {'sort':'roundWin'}) }}"><button class="button-blue {{ sort == 'roundWin' ? ' active' : '' }}">RoundWin</button></a>
                <a href="{{ path('marton_topcars_leaderboard', {'sort':'streak'}) }}"><button class="button-blue {{ sort == 'streak' ? ' active' : '' }}">Streak</button></a>
            </div>

            <table class="leaderboard">
                <tr class="tr_header">
                    <th class="left">Player</th>
                    <th class="{{ sort == 'level' ? 'active' : '' }}">Level</th>
                    <th class="{{ sort == 'score' ? 'active' : '' }}">Score</th>
                    <th class="{{ sort == 'roundWin' ? 'active' : '' }}">Win</th>
                    <th>W/L ratio</th>
                    <th class="{{ sort == 'streak' ? 'active' : '' }}">Streak</th>
                </tr>
                {% for user in users %}

                    <tr>
                        <td class="left">
                            <div class="avatar">
                                <a href="{{ path('marton_topcars_user', { 'user': user.username }) }}">
                                    <img src="{{ asset('bundles/martontopcars/images/avatar/default_tn.jpg') }}" width="40px" height="40px"/>
                                </a>
                            </div>
                            <a href="{{ path('marton_topcars_user', { 'user': user.username }) }}">{{ user.username }}</a>
                        </td>

                        <td>{{ user.progress.level }}</td>
                        <td>{{ user.progress.score }}</td>
                        <td>{{ user.progress.roundWin }}</td>
                        <td>{{ user.statistics.wLRatio }}</td>
                        <td>{{ user.progress.streak }}</td>
                    </tr>



                {% endfor %}

            </table>




        </div>
    </div>

{% endblock %}